{
  "name": "thompson2026",
  "version": "1.0.0",
  "description": "Nicholas Thompson's 2026 California gubernatorial campaign website",
  "main": "declaration-interactive.js",
  "scripts": {
    "build": "postcss styles/main.css -o dist/styles.min.css && npx @11ty/eleventy",
    "build:clean": "rimraf _site && postcss styles/main.css -o dist/styles.min.css && npx @11ty/eleventy",
    "build:css": "postcss styles/main.css -o dist/styles.min.css",
    "build:eleventy": "npx @11ty/eleventy",
    "dev": "set NODE_ENV=development&& postcss styles/main.css -o dist/styles.min.css && npx @11ty/eleventy --serve",
    "serve": "set NODE_ENV=production&& postcss styles/main.css -o dist/styles.min.css && npx @11ty/eleventy --serve",
    "watch": "postcss styles/main.css -o dist/styles.min.css --watch",
    "clean": "rimraf _site"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "cssnano": "^7.1.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "purgecss": "^6.0.0",
    "rimraf": "^6.0.1"
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "cssnano": {
        "preset": [
          "default",
          {
            "discardComments": {
              "removeAll": true
            }
          }
        ]
      }
    }
  },
  "dependencies": {
    "luxon": "^3.7.1",
    "sharp": "^0.34.3"
  }
}
